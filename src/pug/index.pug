extends _layout.pug

block vars
    include ./_config.pug
    - var key = "top"
    - var page = pages[key]

block contents
    #app
        h2 page.title
        ul.tabMenu
            li.tabMenu__item(@click="isSelect('1')") All
            li.tabMenu__item(@click="isSelect('2')") 2
            li.tabMenu__item(@click="isSelect('3')") 3

        .tabContents
            .tabContents__block(v-show="isActive === '1'") こんてんつ１
            .tabContents__block(v-show="isActive === '2'") こんてんつ2
            .tabContents__block(v-show="isActive === '3'") こんてんつ3




